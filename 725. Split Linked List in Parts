class Solution {
    public ListNode[] splitListToParts(ListNode head, int k) {
        ListNode[] result = new ListNode[k];

        // 1. Count total nodes
        int length = 0;
        ListNode curr = head;
        while (curr != null) {
            length++;
            curr = curr.next;
        }

        // 2. Calculate base size and extra nodes
        int size = length / k;
        int extra = length % k;

        curr = head;

        // 3. Split the list
        for (int i = 0; i < k; i++) {
            result[i] = curr;
            int currentPartSize = size + (extra > 0 ? 1 : 0);
            extra--;

            // Move to the end of current part
            for (int j = 1; j < currentPartSize && curr != null; j++) {
                curr = curr.next;
            }

            // Cut the list
            if (curr != null) {
                ListNode next = curr.next;
                curr.next = null;
                curr = next;
            }
        }

        return result;
    }
}
